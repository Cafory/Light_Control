            <ComboBoxItem Content="楼层灯" HorizontalAlignment="Left" Width="179"/>
            <ComboBoxItem Content="出口灯" HorizontalAlignment="Left" Width="179"/>
        </ComboBox>
        <ListBox x:Name="rtb_1" HorizontalAlignment="Left" Height="79" Margin="198,170,0,0" VerticalAlignment="Top" Width="181" >

        </ListBox>
        <TextBox x:Name="tb_1" HorizontalAlignment="Left" Height="20" Margin="198,124,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="157"/>
        <Button Style="{StaticResource buttonstyle}"  HorizontalAlignment="Left" Margin="355,124,0,0" VerticalAlignment="Top" Width="22" Height="20" Click="Button_Click_1">

            <Button.Background >

                <ImageBrush ImageSource="Resources/search.png"></ImageBrush>
            </Button.Background>
        </Button>

        <Grid Margin="0,117,0,0" >
            <Grid.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard >
                            <DoubleAnimation Duration="0:0:3" Storyboard.TargetProperty="Opacity" From="0" To="1" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Grid.Triggers>
            <Button Name="b_1" Click="Btn2_Click" FontSize="16" Style="{StaticResource buttonstyle}" Content="1" HorizontalAlignment="Left" Margin="22,183,0,0" VerticalAlignment="Top" Width="23" Height="19"/>
