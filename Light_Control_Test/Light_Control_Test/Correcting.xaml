        <Button Content="确   认" FontSize="20" HorizontalAlignment="Left" Height="34" Margin="46,336,0,0" VerticalAlignment="Top" Width="138">
            <Button.Background>
                <ImageBrush ImageSource="Resources/灯具设置选项按键.png"></ImageBrush>
            </Button.Background>
        </Button>
        <Button Name="return" Content="返   回" FontSize="20" HorizontalAlignment="Left" Height="34" Margin="217,336,0,0" VerticalAlignment="Top" Width="138" Click="return_Click">
            <Button.Background>
                <ImageBrush ImageSource="Resources/灯具设置选项按键.png"></ImageBrush>
            </Button.Background>
        </Button >
        <ComboBox HorizontalAlignment="Left" Margin="198,264,0,0" VerticalAlignment="Top" Width="181">
            <ComboBoxItem Content="照明灯" HorizontalAlignment="Left" Width="179"/>
            <ComboBoxItem Content="双头灯" HorizontalAlignment="Left" Width="179"/>
            <ComboBoxItem Content="标志灯" HorizontalAlignment="Left" Width="179"/>
            <ComboBoxItem Content="左标志" HorizontalAlignment="Left" Width="179"/>
            <ComboBoxItem Content="右标志" HorizontalAlignment="Left" Width="179"/>
            <ComboBoxItem Content="地埋灯" HorizontalAlignment="Left" Width="179"/>
