            <Button Name="b_9" Click="Btn2_Click" FontSize="16" Style="{StaticResource buttonstyle}" Content="9" HorizontalAlignment="Left" Margin="242,183,0,0" VerticalAlignment="Top" Width="23" Height="19"/>
            <Button Name="b_0" Click="Btn2_Click" FontSize="16" Style="{StaticResource buttonstyle}" Content="0" HorizontalAlignment="Left" Margin="270,183,0,0" VerticalAlignment="Top" Width="23" Height="19"/>
            <Button Name="b_delect" Click="Btn2_Click" FontSize="16" Style="{StaticResource buttonstyle}" Content="删除" HorizontalAlignment="Left" Margin="311,183,0,0" VerticalAlignment="Top" Width="37" Height="19"/>
        </Grid>
    </Grid>
</Window>

