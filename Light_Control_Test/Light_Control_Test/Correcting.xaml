            <Label.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FFE6DBDB" Offset="1"/>
                </LinearGradientBrush>
            </Label.OpacityMask>
        </Label>
        <Button Style="{StaticResource buttonstyle}" HorizontalAlignment="Left" Margin="327,10,0,0" VerticalAlignment="Top" Width="63" Height="24" Click="Button_Click">
            <Button.Background>
                <ImageBrush ImageSource="Resources/键盘.jpg"></ImageBrush>
            </Button.Background>
        </Button>
