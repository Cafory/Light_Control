                <ColumnDefinition Width="12*"/>
                <ColumnDefinition Width="43*"/>
                <ColumnDefinition Width="86*"/>
                <ColumnDefinition Width="9*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="24*"/>
                <RowDefinition Height="28*"/>
                <RowDefinition Height="42*"/>
                <RowDefinition Height="29*"/>
                <RowDefinition Height="42*"/>
                <RowDefinition Height="26*"/>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="40*"/>
                <RowDefinition Height="55*"/>
            </Grid.RowDefinitions>
            <Label Content="{Binding ElementName=windowTitle,Path=Content,Mode=OneWay}"  Foreground="Wheat" Grid.ColumnSpan="5" FontSize="12" VerticalAlignment="Top" Height="24"></Label>
            <Label x:Name="replace_BeforeTip" Content="配电箱码:" FontSize="12" Grid.ColumnSpan="3" Grid.Row="3" Grid.Column="1"></Label>

            <Label x:Name="replace_BeforeCode" Content="xxxxxxxx" FontSize="12" Grid.Column="4" Grid.Row="3" Grid.ColumnSpan="4"></Label>

            <Label Content="灯具替换"  Grid.Row="1" Grid.Column="1"  Grid.ColumnSpan="4" FontSize="14" VerticalAlignment="Top" Height="28" Foreground="Black"></Label>
            <Label x:Name="replace_NowTip" Content="配电箱码:" FontSize="12" Grid.ColumnSpan="2" Grid.Row="5" Grid.Column="1"></Label>
            <TextBox x:Name="nowCode" Grid.Row="5" Grid.ColumnSpan="4" Grid.Column="3" FontSize="16" TextAlignment="Center" VerticalContentAlignment="Center" ></TextBox>
            <Button x:Name="lightReplace_Back"  Click="lightReplace_Back_Click"  Grid.Row="7" Grid.Column="1" Content="返回" Grid.ColumnSpan="4" BorderThickness="0" Width="auto" Height="auto" Style="{StaticResource buttonstyle}">
                <Button.Background>
                    <ImageBrush ImageSource="Resources/灯具设置选项按键.png"></ImageBrush>
                </Button.Background>
            </Button>

            <Button x:Name="confirm"  Grid.Row="7" Grid.Column="6" Content="确认" Grid.ColumnSpan="1" BorderThickness="0" Width="auto" Height="auto" Style="{StaticResource buttonstyle}" Click="Confirm_Click">
                <Button.Background>
                    <ImageBrush ImageSource="Resources/灯具设置选项按键.png"></ImageBrush>
                </Button.Background>
            </Button>
        </Grid>




        <Grid x:Name="controlGrid" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="11*"/>
                <ColumnDefinition Width="60*"/>
                <ColumnDefinition Width="38*"/>
                <ColumnDefinition Width="16*"/>
                <ColumnDefinition Width="38*"/>
                <ColumnDefinition Width="60*"/>
                <ColumnDefinition Width="10*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="19*"/>
                <RowDefinition Height="6*"/>
                <RowDefinition Height="23*"/>
                <RowDefinition Height="15*"/>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="27*"/>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="28*"/>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="6*"/>
                <RowDefinition Height="43*"/>
                <RowDefinition Height="19*"/>
            </Grid.RowDefinitions>
            <Label Content="{Binding ElementName=windowTitle,Path=Content,Mode=OneWay}" Grid.ColumnSpan="3" Grid.Row="0" Foreground="Wheat" VerticalAlignment="Top" VerticalContentAlignment="Top"  FontSize="12" Width="auto"  Height="auto" Grid.RowSpan="2" ></Label>
            <Label Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Content="灯具状态控制"></Label>

            <Button x:Name="All_Shine" Grid.Row="4" Grid.Column="1" Content="全亮" Style="{StaticResource buttonstyle}" Width="auto" Height="auto" BorderThickness="0"  FontSize="14" Grid.ColumnSpan="2" Click="All_Shine_Click" >
                <Button.Background>
                    <ImageBrush ImageSource="Resources/灯具设置选项按键.png"></ImageBrush>
                </Button.Background>
            </Button>
            <Button x:Name="All_Off" Grid.Row="4" Grid.Column="4" Content="全灭"  Style="{StaticResource buttonstyle}" Width="auto" Height="auto" BorderThickness="0"  FontSize="14" Grid.ColumnSpan="2" Click="All_Off_Click">
                <Button.Background>
                    <ImageBrush ImageSource="Resources/灯具设置选项按键.png"></ImageBrush>
                </Button.Background>
            </Button>

            <Button x:Name="Left_Shine" Grid.Row="6" Grid.Column="1" Content="左亮"  Style="{StaticResource buttonstyle}" Width="auto" Height="auto" BorderThickness="0"  FontSize="14" Grid.ColumnSpan="2" Click="Left_Shine_Click">
                <Button.Background>
                    <ImageBrush ImageSource="Resources/灯具设置选项按键.png"></ImageBrush>
                </Button.Background>
            </Button>
            <Button x:Name="Right_Shine" Grid.Row="6" Grid.Column="4" Content="右亮"  Style="{StaticResource buttonstyle}" Width="auto" Height="auto" BorderThickness="0"  FontSize="14" Grid.ColumnSpan="2" Click="Right_Shine_Click">
                <Button.Background>
                    <ImageBrush ImageSource="Resources/灯具设置选项按键.png"></ImageBrush>
                </Button.Background>
            </Button>

            <Button x:Name="Shan" Grid.Row="8" Grid.Column="1" Content="闪"  Style="{StaticResource buttonstyle}" Width="auto" Height="auto" BorderThickness="0"  FontSize="14" Grid.ColumnSpan="2" Click="Shan_Click">
                <Button.Background>
                    <ImageBrush ImageSource="Resources/灯具设置选项按键.png"></ImageBrush>
                </Button.Background>
            </Button>
            <Button x:Name="Shan_Before" Grid.Row="8" Grid.Column="4" Content="闪前"  Style="{StaticResource buttonstyle}" Width="auto" Height="auto" BorderThickness="0"  FontSize="14" Grid.ColumnSpan="2" Click="Shan_Before_Click">
                <Button.Background>
                    <ImageBrush ImageSource="Resources/灯具设置选项按键.png"></ImageBrush>
                </Button.Background>
            </Button>
            <Button x:Name="controlGrid_Back" Click="controlGrid_Back_Click" Grid.Row="10" Grid.Column="2" Content="返回" Grid.ColumnSpan="3" Style="{StaticResource buttonstyle}" Width="auto" Height="auto" BorderThickness="0"  FontSize="14" Grid.RowSpan="1" >
                <Button.Background>
                    <ImageBrush ImageSource="Resources/灯具设置选项按键.png"></ImageBrush>
                </Button.Background>
            </Button>
        </Grid>




        <Grid x:Name="setGrid" Visibility="Collapsed">
