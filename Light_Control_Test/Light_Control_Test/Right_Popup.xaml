                <RowDefinition Height="9*"/>
                <RowDefinition Height="26*"/>
                <RowDefinition Height="18*"/>
                <RowDefinition Height="17*"/>
                <RowDefinition Height="19*"/>
                <RowDefinition Height="26*"/>
            </Grid.RowDefinitions>
            <Label Content="{Binding ElementName=windowTitle,Path=Content,Mode=OneWay}" FontSize="10" Foreground="Wheat" Grid.ColumnSpan="2"></Label>
            <Label Content="    预案修改" FontSize="10" Grid.Row="1" Foreground="Black" Grid.ColumnSpan="2"></Label>

            <Label Content="左" Grid.Row="3"  Grid.Column="1" FontSize="10" HorizontalContentAlignment="Center"></Label>
            <Label Content="右" Grid.Row="3"  Grid.Column="6" FontSize="10" HorizontalContentAlignment="Center"></Label>

            <TextBox VerticalContentAlignment="Center" HorizontalContentAlignment="Center" x:Name="L1" Grid.Row="4" Grid.Column="1"></TextBox>
            <TextBox VerticalContentAlignment="Center" HorizontalContentAlignment="Center" x:Name="R1" Grid.Row="4" Grid.Column="6"></TextBox>

            <TextBox VerticalContentAlignment="Center" HorizontalContentAlignment="Center" x:Name="L2" Grid.Row="6" Grid.Column="1"></TextBox>
            <TextBox VerticalContentAlignment="Center" HorizontalContentAlignment="Center" x:Name="R2" Grid.Row="6" Grid.Column="6"></TextBox>

            <TextBox VerticalContentAlignment="Center" HorizontalContentAlignment="Center" x:Name="L3" Grid.Row="8" Grid.Column="1"></TextBox>
            <TextBox VerticalContentAlignment="Center" HorizontalContentAlignment="Center" x:Name="R3" Grid.Row="8" Grid.Column="6"></TextBox>

            <TextBox VerticalContentAlignment="Center" HorizontalContentAlignment="Center" x:Name="L4" Grid.Row="10" Grid.Column="1"></TextBox>
            <TextBox VerticalContentAlignment="Center" HorizontalContentAlignment="Center" x:Name="R4" Grid.Row="10" Grid.Column="6"></TextBox>

            <TextBox VerticalContentAlignment="Center" HorizontalContentAlignment="Center" x:Name="L5" Grid.Row="12" Grid.Column="1"></TextBox>
            <TextBox VerticalContentAlignment="Center" HorizontalContentAlignment="Center" x:Name="R5" Grid.Row="12" Grid.Column="6"></TextBox>

            <Button x:Name="prePlanModify_Confirm" Grid.Row="14" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="2" Content="确认" Width="auto" Height="auto" Style="{StaticResource buttonstyle}" BorderThickness="0" Click="prePlanModify_Confirm_Click">
                <Button.Background>
                    <ImageBrush ImageSource="Resources/灯具设置选项按键.png"></ImageBrush>
                </Button.Background>
            </Button>
            <Button x:Name="prePlanModify_Back" Grid.Row="14" Grid.Column="5" Grid.ColumnSpan="2" Grid.RowSpan="2" Content="返回" Width="auto" Height="auto" Style="{StaticResource buttonstyle}" BorderThickness="0" Click="prePlanModify_Back_Click">
                <Button.Background>
                    <ImageBrush ImageSource="Resources/灯具设置选项按键.png"></ImageBrush>
                </Button.Background>
            </Button>

        </Grid>



        <Grid x:Name="setGrid_LightLocation" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="21*"/>
                <ColumnDefinition Width="62*"/>
                <ColumnDefinition Width="23*"/>
                <ColumnDefinition Width="11*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="49*"/>
                <ColumnDefinition Width="36*"/>
                <ColumnDefinition Width="21*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="27*"/>
                <RowDefinition Height="23*"/>
                <RowDefinition Height="39*"/>
                <RowDefinition Height="29*"/>
                <RowDefinition Height="23*"/>
