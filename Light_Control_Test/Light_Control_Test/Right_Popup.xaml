<Window x:Class="Light_Control_Test.Right_Popup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Light_Control_Test"
        mc:Ignorable="d"
        Title="Right_Popup" Height="336" Width="233" WindowStyle="None" WindowStartupLocation="Manual" ResizeMode="NoResize" Deactivated="Window_Deactivated">
    <Window.Background>
        <ImageBrush ImageSource="Resources/单背景.png"></ImageBrush>
    </Window.Background>
    <Grid>
        <Grid x:Name="btnGrid" Visibility="Visible"  >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="11*"/>
                <ColumnDefinition Width="98*"/>
                <ColumnDefinition Width="16*"/>
                <ColumnDefinition Width="98*"/>
                <ColumnDefinition Width="10*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="19*"/>
                <RowDefinition Height="6*"/>
                <RowDefinition Height="55*"/>
                <RowDefinition Height="55*"/>
                <RowDefinition Height="26*"/>
                <RowDefinition Height="55*"/>
                <RowDefinition Height="25*"/>
                <RowDefinition Height="54*"/>
                <RowDefinition Height="41*"/>
            </Grid.RowDefinitions>
            <Label x:Name="windowTitle" Content="xxxxxx" Grid.ColumnSpan="2" Grid.Row="0" Foreground="Wheat"  FontSize="12" Width="auto"  Height="auto" Grid.RowSpan="2" ></Label>
            <Button x:Name="control" Grid.Row="3" Grid.Column="1" Content="控制" Style="{StaticResource buttonstyle}" Width="auto" Height="auto" BorderThickness="0"  FontSize="18" Click="control_Click">
                <Button.Background>
                    <ImageBrush ImageSource="Resources/灯具设置选项按键.png"></ImageBrush>
                </Button.Background>
            </Button>
            <Button x:Name="errorBan" Grid.Row="3" Grid.Column="3" Content="故障屏蔽"  Style="{StaticResource buttonstyle}" Width="auto" Height="auto" BorderThickness="0"  FontSize="18">
                <Button.Background>
                    <ImageBrush ImageSource="Resources/灯具设置选项按键.png"></ImageBrush>
                </Button.Background>
            </Button>

            <Button x:Name="replace" Click="replace_Click" Grid.Row="5" Grid.Column="1" Content="替换"  Style="{StaticResource buttonstyle}" Width="auto" Height="auto" BorderThickness="0"  FontSize="18">
                <Button.Background>
                    <ImageBrush ImageSource="Resources/灯具设置选项按键.png"></ImageBrush>
                </Button.Background>
            </Button>
            <Button  x:Name="set" Click="set_Click" Grid.Row="5" Grid.Column="3" Content="安装位置"  Style="{StaticResource buttonstyle}" Width="auto" Height="auto" BorderThickness="0"  FontSize="18">
                <Button.Background>
                    <ImageBrush ImageSource="Resources/灯具设置选项按键.png"></ImageBrush>
                </Button.Background>
            </Button>

            <Button x:Name="emergency" Grid.Row="7" Grid.Column="1" Content="应急"  Style="{StaticResource buttonstyle}" Width="auto" Height="auto" BorderThickness="0"  FontSize="18"  Click="emergency_Click">
                <Button.Background>
                    <ImageBrush ImageSource="Resources/灯具设置选项按键.png"></ImageBrush>
                </Button.Background>
            </Button>
            <Button x:Name="full" Grid.Row="7" Grid.Column="3" Content="详情"  Style="{StaticResource buttonstyle}" Width="auto" Height="auto" BorderThickness="0"  FontSize="18" Click="full_Click">
                <Button.Background>
                    <ImageBrush ImageSource="Resources/灯具设置选项按键.png"></ImageBrush>
                </Button.Background>
            </Button>
        </Grid>



        <Grid x:Name="lightReplace"  Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="9*"/>
                <ColumnDefinition Width="43*"/>
                <ColumnDefinition Width="20*"/>
