                <RowDefinition Height="30*"/>
                <RowDefinition Height="11*"/>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="41*"/>
                <RowDefinition Height="36*"/>
                <RowDefinition Height="15*"/>
            </Grid.RowDefinitions>
            <Label Content="{Binding ElementName=windowTitle,Path=Content,Mode=OneWay}" Foreground="Wheat" Grid.ColumnSpan="4"></Label>
            <Label x:Name="Pos_Tip" Grid.Row="1"  Content="   灯具位置" FontSize="12" Grid.ColumnSpan="4"></Label>

            <Label x:Name="IniPosition"  Grid.Row="3" Grid.Column="1" Content="原位置：未设置" Grid.ColumnSpan="7"></Label>

            <Label Grid.Row="5" Grid.Column="1" Content="修改为:" Grid.ColumnSpan="3"></Label>

            <TextBox Grid.Row="6" Grid.Column="1" x:Name="Area"></TextBox>
            <Label  Grid.Row="6" Grid.Column="2" Content="区"  VerticalAlignment="Center" HorizontalAlignment="Center" Margin="6,6,6,0" Height="24" Width="22" Grid.ColumnSpan="2"/>

            <TextBox Grid.Row="6" Grid.Column="4" Grid.ColumnSpan="2" x:Name="Building"></TextBox>
            <Label  Grid.Row="6" Grid.Column="6" Content="栋"  VerticalAlignment="Center" HorizontalAlignment="Center" Margin="8,6,6,0" Height="24" Width="22"/>

            <TextBox Grid.Row="8" Grid.Column="1" x:Name="Layer"></TextBox>
            <Label  Grid.Row="8" Grid.Column="2" Content="层"  VerticalAlignment="Center" HorizontalAlignment="Center" Margin="6,16,6,31" Height="24" Width="22" Grid.ColumnSpan="2" Grid.RowSpan="2"></Label>

            <TextBox Grid.Row="8" Grid.Column="4" Grid.ColumnSpan="2" x:Name="Room"></TextBox>
            <Label  Grid.Row="8" Grid.Column="6" Content="号"  VerticalAlignment="Center" HorizontalAlignment="Center" Margin="8,16,6,31" Height="24" Width="22" Grid.RowSpan="2"></Label>

            <Button x:Name="lightLocation_Confirm" Grid.Row="10" Grid.Column="1" Grid.ColumnSpan="2"  Content="确认" Width="auto" Height="auto" Style="{StaticResource buttonstyle}" BorderThickness="0" Click="lightLocation_Confirm_Click">
                <Button.Background>
                    <ImageBrush ImageSource="Resources/灯具设置选项按键.png"></ImageBrush>
                </Button.Background>
            </Button>
            <Button x:Name="lightLocation_Back" Grid.Row="10" Grid.Column="5" Grid.ColumnSpan="2"  Content="返回" Width="auto" Height="auto" Style="{StaticResource buttonstyle}" BorderThickness="0" Click="lightLocation_Back_Click">
                <Button.Background>
                    <ImageBrush ImageSource="Resources/灯具设置选项按键.png"></ImageBrush>
                </Button.Background>
            </Button>
        </Grid>




        <Grid x:Name="setGrid_IniStatus"  Visibility="Collapsed">
