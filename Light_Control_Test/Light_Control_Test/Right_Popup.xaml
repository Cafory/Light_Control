            <Button x:Name="setGrid_PrePlnModify_btn" Grid.Row="4" Grid.Column="1"  BorderThickness="0" Width="auto" Height="auto" Style="{StaticResource buttonstyle}" Content="预案修改" Click="setGrid_PrePlnModify_btn_Click" Grid.ColumnSpan="2" >
                <Button.Background>
                    <ImageBrush ImageSource="Resources/灯具设置选项按键.png"></ImageBrush>
                </Button.Background>
            </Button>
            <Button x:Name="setGrid_LightLocation_btn" Grid.Row="6" Grid.Column="1"  BorderThickness="0" Width="auto" Height="auto" Style="{StaticResource buttonstyle}" Content="安装位置" Click="setGrid_LightLocation_btn_Click" Grid.ColumnSpan="2" >
                <Button.Background>
                    <ImageBrush ImageSource="Resources/灯具设置选项按键.png"></ImageBrush>
                </Button.Background>
            </Button>
            <Button x:Name="setGrid_Back" Grid.Row="8" Grid.Column="1"  BorderThickness="0" Width="auto" Height="auto" Style="{StaticResource buttonstyle}" Content="返回" Click="setGrid_Back_Click" Grid.ColumnSpan="2">
                <Button.Background>
                    <ImageBrush ImageSource="Resources/灯具设置选项按键.png"></ImageBrush>
                </Button.Background>
            </Button>

        </Grid>




        <Grid x:Name="setGrid_prePlanModify" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="27*"/>
