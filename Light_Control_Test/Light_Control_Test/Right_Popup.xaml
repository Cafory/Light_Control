                <RowDefinition Height="35*"/>
                <RowDefinition Height="32*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="30*"/>

                <RowDefinition Height="30*"/>
                <RowDefinition Height="39*"/>
                <RowDefinition Height="16*"/>
            </Grid.RowDefinitions>
            <Label Content="{Binding ElementName=windowTitle,Path=Content,Mode=OneWay}" Foreground="Wheat" Grid.ColumnSpan="4"></Label>
            <Label  Grid.Row="1"  Content="   初始状态设置" FontSize="12" Grid.ColumnSpan="4"></Label>

            <Label  Grid.Row="3" Grid.Column="1" Content="原状态：全灭" Grid.ColumnSpan="7"></Label>

            <Label Grid.Row="5" Grid.Column="1" Content="修改为:" Grid.ColumnSpan="3"></Label>

            <RadioButton  Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="4" Content="全亮" x:Name="IniAllBright" ></RadioButton>
            <RadioButton  Grid.Row="7" Grid.Column="2" Grid.ColumnSpan="4" Content="全灭" x:Name="IniAllOff" ></RadioButton>
            <RadioButton  Grid.Row="8" Grid.Column="2" Grid.ColumnSpan="4" Content="右亮" x:Name="IniRightBright" ></RadioButton>
            <RadioButton  Grid.Row="9" Grid.Column="2" Grid.ColumnSpan="4" Content="左亮" x:Name="IniLeftBright" ></RadioButton>


            <Button x:Name="IniStatus_Confirm" Grid.Row="10" Grid.Column="1" Grid.ColumnSpan="2"  Content="确认" Width="auto" Height="auto" Style="{StaticResource buttonstyle}" BorderThickness="0" Click="IniStatus_Confirm_Click">
                <Button.Background>
                    <ImageBrush ImageSource="Resources/灯具设置选项按键.png"></ImageBrush>
                </Button.Background>
            </Button>
            <Button x:Name="IniStatus_Back" Grid.Row="10" Grid.Column="5" Grid.ColumnSpan="2"  Content="返回" Width="auto" Height="auto" Style="{StaticResource buttonstyle}" BorderThickness="0" Click="IniStatus_Back_Click">
                <Button.Background>
                    <ImageBrush ImageSource="Resources/灯具设置选项按键.png"></ImageBrush>
                </Button.Background>
            </Button>
        </Grid>

        <Grid x:Name="Info" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="53*"/>
                <RowDefinition Height="26*"/>
                <RowDefinition Height="26*"/>
                <RowDefinition Height="24*"/>
                <RowDefinition Height="25*"/>
                <RowDefinition Height="27*"/>
                <RowDefinition Height="25*"/>
